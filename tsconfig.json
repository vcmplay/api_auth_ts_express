{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2018",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "removeComments": true,
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}